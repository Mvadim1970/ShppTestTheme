<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/btn_round" android:state_activated="true" />
    <item android:drawable="@drawable/btn_round" android:state_pressed="false" />
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_dark" />
            <corners android:radius="10dp" />
            <stroke android:color="@color/red" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_dark" />
            <corners android:radius="10dp" />
            <stroke android:color="@color/yellow" android:width="1dp"/>
        </shape>
    </item>
</selector>